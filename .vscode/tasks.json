{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: Configure",
            "type": "shell",
            "command": "C:/msys64/ucrt64/bin/cmake.exe",
            "args": [
                "--preset", "ucrt64"
            ],
            "group": "build",
            "problemMatcher": [],
            "detail": "Run CMake configure step using UCRT64 preset"
        },
        {
            "label": "CMake: Build",
            "type": "shell",
            "command": "C:/msys64/ucrt64/bin/cmake.exe",
            "args": [
                "--build", "${workspaceFolder}/build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Build the project using CMake + Ninja"
        },
        {
            "label": "CMake: Clean",
            "type": "shell",
            "command": "C:/msys64/ucrt64/bin/cmake.exe",
            "args": [
                "--build", "${workspaceFolder}/build",
                "--target", "clean"
            ],
            "group": "build",
            "problemMatcher": [],
            "detail": "Clean the build folder"
        }
    ]
}
